// PUT _index_template/tv_logs_template
{
  "index_patterns": ["tv_*-logs-*"],
  "priority": 100,
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 1
    },
    "mappings": {
      "properties": {
        "logger_class": {
          "type": "text",
          "analyzer": "simple",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
    
        "msg_body": {
          "type": "text",
          "analyzer": "standard" 
        },

        "site": { "type": "keyword" },
        "env": { "type": "keyword" },
        "log_level": { "type": "keyword" }
      }
    }
  }
}